      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "interval": "2m",
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{namespace=~\"$namespace\", app=~\"$app\", route!=\"/health\"}[$__rate_interval])) by (le)) or vector(0)",
