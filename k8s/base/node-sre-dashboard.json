        "w": 8,
        "x": 8,
        "y": 9
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "interval": "2m",
      "targets": [
        {
          "expr": "100 * ((sum(rate(http_requests_total{namespace=~\"$namespace\", app=~\"$app\", route!=\"/health\", status=~\"5.*\"}[$__rate_interval])) or vector(0)) / (sum(rate(http_requests_total{namespace=~\"$namespace\", app=~\"$app\", route!=\"/health\"}[$__rate_interval])) or vector(1)))",
          "refId": "A"
        }
      ]
    },
    {
